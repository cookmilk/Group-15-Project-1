<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#80FFFFFF"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_diary_popup"
    tools:context="com.example.jeremy.spark.DiaryPopupActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="181dp"
        android:layout_height="248dp"

        android:layout_gravity="center_horizontal">

        <Space
            android:layout_width="340dp"
            android:layout_height="10dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Date"
            android:id="@+id/textView" />


        <Space
            android:layout_width="340dp"
            android:layout_height="10dp"
            android:layout_gravity="center_horizontal" />

        <View android:layout_width="342dp"
            android:layout_height="1dp"
            android:background="#000000" />
        <Space
            android:layout_width="340dp"
            android:layout_height="10dp"
            android:layout_gravity="center_horizontal" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="1st Log"
                android:id="@+id/first"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textSize="24dp"
                android:layout_alignParentBottom="true"
                android:textAlignment="center" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:id="@+id/but1"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:background="#00ffffff"
                android:textSize="24dp"
                android:textColor="#7326BA" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="2nd Log"
                android:id="@+id/second"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textSize="24dp"
                android:layout_alignParentBottom="true"
                android:textAlignment="center" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:id="@+id/but2"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:background="#00ffffff"
                android:textSize="24dp"
                android:textColor="#7326BA" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="3rd Log"
                android:id="@+id/third"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textSize="24dp"
                android:layout_alignParentBottom="true"
                android:textAlignment="center" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:id="@+id/but3"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:background="#00ffffff"
                android:textSize="24dp"
                android:textColor="#7326BA" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="4th Log"
                android:id="@+id/fourth"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textSize="24dp"
                android:layout_alignParentBottom="true"
                android:textAlignment="center" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:id="@+id/but4"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:background="#00ffffff"
                android:textSize="24dp"
                android:textColor="#7326BA" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="5th Log"
                android:id="@+id/fifth"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textSize="24dp"
                android:layout_alignParentBottom="true"
                android:textAlignment="center" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:id="@+id/but5"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:background="#00ffffff"
                android:textSize="24dp"
                android:textColor="#7326BA" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
