<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_setup2" tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#EEEEEE"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="10dp">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/relativelayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <ImageView
                android:id="@+id/myImageView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/diamond_setup_header_520x260" />
            <TextView
                android:id="@+id/myImageViewText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:gravity="center"
                android:text="Setup reminders"
                android:textColor="#FFFFFF"
                android:textSize="34dp"
                android:layout_marginStart="32dp"
                android:layout_marginBottom="16dp"
                android:layout_alignBottom="@+id/myImageView"
                android:layout_alignParentStart="true" />

            <View android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:alpha=".1"
                android:background="#000000"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@+id/myImageView"
                android:layout_alignTop="@+id/myImageViewText" />
            <ImageView
                android:id="@+id/paper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/paper"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="28dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="32dp"
        android:paddingTop="16dp"
        android:paddingLeft="32dp"
        android:alpha=".87"
        android:text="Make sure this data is accurate as many of Spark's functionalities depend on these settings"
        android:textColor="#000000"
        android:textSize="18dp"/>

    <TextView
        android:layout_marginTop="8dp"
        android:layout_marginLeft="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha=".87"
        android:textSize="16dp"
        android:text="Birthday"/>
    <EditText
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_width="fill_parent"
        android:text="e.g. 07/14/94"
        android:alpha=".34"
        android:textSize="12dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="8dp"
        android:layout_marginLeft="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha=".87"
        android:textSize="16dp"
        android:text="Hobbies"/>
    <EditText
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_width="fill_parent"
        android:text="e.g. football, basketball, tennis"
        android:alpha=".34"
        android:textSize="12dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="8dp"
        android:layout_marginLeft="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha=".87"
        android:textSize="16dp"
        android:text="Sleep Schedule"/>
    <EditText
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_width="fill_parent"
        android:text="e.g. 10pm - 8am"
        android:alpha=".34"
        android:textSize="12dp"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <LinearLayout
            android:id="@+id/colored_bar"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_gravity="bottom"
            android:background="#E0E0E0"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SKIP"
                android:textSize="14dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="32dp"
                android:id="@+id/setup_1_button_1"
                android:layout_gravity="center"
                android:background="?android:selectableItemBackground"
                android:layout_weight="2"
                android:textColor="#009688"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:selectableItemBackground"
                android:clickable="false"/>



            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEXT"
                android:textSize="14dp"
                android:gravity="right|center_vertical"
                android:paddingRight="32dp"
                android:id="@+id/setup_1_button_2"
                android:layout_gravity="center"
                android:background="?android:selectableItemBackground"
                android:layout_weight="2"
                android:textColor="#009688"
                android:textStyle="bold" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
