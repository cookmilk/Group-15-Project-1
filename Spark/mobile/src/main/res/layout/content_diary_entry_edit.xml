<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_diary_entry_edit"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.jeremy.spark.DiaryEntryEditActivity"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="2dp">

    <Space
        android:layout_width="342dp"
        android:layout_height="20px"
        android:layout_weight="0.05"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1"
        android:layout_weight="0.79">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Log Entry"
            android:id="@+id/textView3"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="24dp"
            android:textSize="24dp" />

        <View android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="16dp"
            android:alpha=".20"
            android:background="#000000" />

        <ImageSwitcher
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:id="@+id/imageSwitcher"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/face_neutral"
            android:layout_weight="0.49" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/initial_thoughts"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:backgroundTint="#7B1FA2"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textColor="#878787"
            android:hint="Initial thoughts" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/action_plan"
            android:textSize="14sp"
            android:backgroundTint="#7B1FA2"
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#878787"
            android:hint="Action plan" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/challenge"
            android:textSize="14sp"
            android:backgroundTint="#7B1FA2"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#878787"
            android:textCursorDrawable="@drawable/color_cursor"
            android:hint="Challenge yourself" />

        <Button
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/save"
            android:layout_gravity="right"
            android:textColor="#009688"
            android:textSize="14dp"
            android:background="#00ffffff" />

    </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
