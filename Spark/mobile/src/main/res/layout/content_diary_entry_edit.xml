<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_diary_entry_edit"
    tools:context="com.example.jeremy.spark.DiaryEntryEditActivity"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    card_view:cardCornerRadius="2dp"

    <Space
        android:layout_width="342dp"
        android:layout_height="20px"
        android:layout_weight="0.05"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="342dp"
        android:layout_height="500dp"
        android:layout_gravity="center_horizontal"
        android:weightSum="1"
        android:layout_weight="0.78">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Log Entry"
            android:id="@+id/textView3"
            android:textSize="24dp" />

        <ImageSwitcher
            android:layout_width="199dp"
            android:layout_height="72dp"
            android:id="@+id/imageSwitcher"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/face_neutral"
            android:layout_weight="0.49" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_gravity="center_horizontal"
            android:text="Initial Thoughts"
            android:textColor="#878787" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:layout_gravity="center_horizontal"
            android:text="Action Plan"
            android:textColor="#878787" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText3"
            android:layout_gravity="center_horizontal"
            android:text="Challenge your thinking"
            android:textColor="#878787" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Entry"
            android:id="@+id/button5"
            android:layout_gravity="right"
            android:textColor="#009688"
            android:textSize="14dp"
            android:background="#00ffffff" />

    </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
